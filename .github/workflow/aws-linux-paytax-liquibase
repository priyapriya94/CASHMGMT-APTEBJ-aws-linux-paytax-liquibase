name: aws-linux-paytax-liquibase

on:
  workflow_dispatch:
    inputs:
      appVersion:
        required: true
        type: string

env:
  repoPrefix: CASHMGMT-APTEBJ

  
jobs:
  account-validation-api-image:
    uses: dyedurham/CASHMGMT-ecs-generic-template/.github/workflows/ecs.yml@main
    with:
      product: 'apt'
      repo: 'CASHMGMT-APTEBJ-aws-linux-paytax-liquibase'
      appVersion: '${{ inputs.appVersion }}'
      imageName: 'apt-paytax-liquibase'
      appPackageName: 'paytax- params.paytax_rpm_version'
      entrypoint: '/opt/apt/liquibase/paytax.jar\'
      app: database
      ecr-app: database
      scripts:  'scripts/upload-config.sh'
    secrets:
      AWS_ACCESS_KEY_ID: ${{ secrets.APT_NONP_AWS_ACCESS_KEY_ID }}
      AWS_SECRET_ACCESS_KEY: ${{ secrets.APT_NONP_AWS_SECRET_ACCESS_KEY }}
      TOKEN_GH: ${{ secrets.TOKEN_GH }}
      
